{
  "name": "whatsdesktop",
  "productName": "WhatsDesktop",
  "version": "1.8.4",
  "description": "Unofficial clone of web WhatsApp app",
  "license": "MIT",
  "repository": "sergiomb2/whatsdesktop",
  "author": {
    "name": "SÃ©rgio Basto",
    "email": "sergio@serjux.com",
    "url": "https://github.com/sergiomb2/whatsdesktop"
  },
  "engines": {
    "node": ">=14"
  },
  "electronVersion": "15.5.5",
  "scripts": {
    "test": "xo || :",
    "start": "electron .",
    "build": "electron-builder"
  },
  "files": [
    "index.js",
    "menu.js",
    "media/logo-tray.png",
    "media/logo-tray-white.png",
    "media/logo-tray-blue.png"
  ],
  "keywords": [
    "electron-app",
    "WhatsApp",
    "messenger",
    "chat",
    "instant",
    "messaging",
    "WhatsDesktop"
  ],
  "dependencies": {
    "electron-debug": "~3.2.0",
    "electron-store": "^8.0.1",
    "electron-window-state": "~5.0.3",
    "webpack": "^5.72.1"
  },
  "devDependencies": {
    "electron": "~15.5.5",
    "electron-builder": "^23.0.3",
    "xo": "^0.49.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ],
    "ignores": [
      "dist/**"
    ],
    "space": true,
    "rules": {
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ]
    }
  },
  "build": {
    "appId": "com.serjux.whatsdesktop",
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ]
    }
  }
}
